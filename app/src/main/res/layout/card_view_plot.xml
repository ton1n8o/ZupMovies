<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_plot"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lbl_plot"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_toEndOf="@id/img_poster"
            android:layout_toRightOf="@id/img_poster"
            android:background="@color/colorCardHeader"
            android:gravity="center|start"
            android:lines="2"
            android:maxLines="2"
            android:paddingEnd="3dp"
            android:paddingLeft="3dp"
            android:paddingStart="3dp"
            android:singleLine="false"
            android:text="@string/lbl_plot"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/lbl_plot"
            android:layout_alignStart="@id/lbl_plot"
            android:layout_below="@id/lbl_plot">

            <TextView
                android:id="@+id/tv_plot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:gravity="top"
                android:text="@string/str_text"
                android:textSize="15sp" />

        </ScrollView>

    </RelativeLayout>

</android.support.v7.widget.CardView>