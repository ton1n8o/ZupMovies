<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/img_poster"
            android:layout_width="80dp"
            android:layout_height="115dp"
            android:layout_margin="2dp"
            android:contentDescription="@string/desc_img_movie"
            android:scaleType="centerInside"
            android:src="@drawable/ic_zup_movies" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/img_poster"
            android:layout_toRightOf="@id/img_poster"
            android:gravity="top"
            android:lines="2"
            android:maxLines="2"
            android:singleLine="false"
            android:text="Movie Title"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_title"
            android:layout_alignStart="@id/tv_title"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="2011"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_actors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_poster"
            android:layout_alignLeft="@id/tv_title"
            android:layout_alignStart="@id/tv_title"
            android:layout_below="@id/tv_year"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="top"
            android:text="Gerard Butler, Amber Valletta, Michael C. Hall, Kyra Sedgwick"
            android:textSize="12sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>